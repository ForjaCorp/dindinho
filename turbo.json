{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": ["tsconfig.tsbuildinfo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "prisma:generate": {
      "cache": true,
      "outputs": ["node_modules/.prisma", "node_modules/@prisma/client"]
    },
    "dev": {
      "dependsOn": ["prisma:generate"],
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"]
    },
    "test:unit": {
      "dependsOn": ["typecheck"]
    },
    "test:integration": {
      "dependsOn": ["typecheck", "build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
