{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "prisma:generate": {
      "cache": true,
      "outputs": ["node_modules/.prisma", "node_modules/@prisma/client"]
    },
    "dev": {
      "dependsOn": ["prisma:generate"], 
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    }
  }
}