generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
}

enum AccountType {
  STANDARD
  CREDIT
}

enum Role {
  VIEWER
  EDITOR
  ADMIN
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum RecurrenceFrequency {
  MONTHLY
  WEEKLY
  YEARLY
  CUSTOM
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  avatarUrl    String?
  role         Role     @default(VIEWER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  myAccounts     Account[]        @relation("Owner")
  sharedAccounts AccountAccess[]
  categories    Category[]
  refreshTokens RefreshToken[]
}

model Account {
  id    String     @id @default(uuid())
  name  String
  color String
  icon  String
  type  AccountType @default(STANDARD)

  initialBalance Decimal @default(0) @db.Decimal(10, 2)

  ownerId String
  owner   User   @relation("Owner", fields: [ownerId], references: [id])

  accessList     AccountAccess[]
  transactions   Transaction[]
  creditCardInfo CreditCardInfo?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditCardInfo {
  id       String @id @default(uuid())
  accountId String  @unique
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  closingDay Int
  dueDay     Int
  limit      Decimal? @db.Decimal(10, 2)
  brand      String?
}

model AccountAccess {
  id       String @id @default(uuid())
  accountId String
  userId   String
  role     Role   @default(VIEWER)

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([accountId, userId])
}

model Category {
  id       String  @id @default(uuid())
  name     String
  icon     String
  userId   String?
  parentId String?

  user     User?      @relation(fields: [userId], references: [id])
  parent   Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children Category[] @relation("SubCategories")

  transactions Transaction[]
}

model Transaction {
  id          String          @id @default(uuid())
  accountId   String
  categoryId  String?
  amount      Decimal         @db.Decimal(10, 2)
  description String?
  date        DateTime
  type        TransactionType
  isPaid      Boolean         @default(true)

  transferId String?

  recurrenceFrequency   RecurrenceFrequency?
  recurrenceIntervalDays Int?

  tags Json?

  purchaseDate DateTime?
  invoiceMonth String?

  recurrenceId      String?
  installmentNumber Int?
  totalInstallments Int?

  account  Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([accountId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     Bytes    @unique @db.Binary(32)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
}

model SignupAllowlist {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}
