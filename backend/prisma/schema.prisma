generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "mysql"
}

enum AccountType {
  STANDARD
  CREDIT
}

enum SystemRole {
  USER
  ADMIN
}

enum ResourcePermission {
  VIEWER
  EDITOR
  OWNER
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

enum RecurrenceFrequency {
  MONTHLY
  WEEKLY
  YEARLY
  CUSTOM
}

enum BudgetType {
  SPENDING_LIMIT
  SAVINGS_GOAL
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  phone        String?
  avatarUrl    String?
  systemRole   SystemRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  myAccounts     Account[]        @relation("Owner")
  sharedAccounts AccountAccess[]
  categories    Category[]
  refreshTokens RefreshToken[]
  sentInvites   Invite[]        @relation("SentInvites")
  budgets       Budget[]
}

model Account {
  id    String     @id @default(uuid())
  name  String
  color String
  icon  String
  type  AccountType @default(STANDARD)

  initialBalance Decimal @default(0) @db.Decimal(10, 2)

  ownerId String
  owner   User   @relation("Owner", fields: [ownerId], references: [id])

  accessList     AccountAccess[]
  transactions   Transaction[]
  snapshots      DailySnapshot[]
  creditCardInfo CreditCardInfo?
  inviteAccounts InviteAccount[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditCardInfo {
  id       String @id @default(uuid())
  accountId String  @unique
  account   Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  closingDay Int
  dueDay     Int
  limit      Decimal? @db.Decimal(10, 2)
  brand      String?
}

model AccountAccess {
  id       String @id @default(uuid())
  accountId String
  userId   String
  permission ResourcePermission @default(VIEWER)

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@unique([accountId, userId])
}

model Category {
  id       String  @id @default(uuid())
  name     String
  icon     String
  userId   String?
  parentId String?

  user     User?      @relation(fields: [userId], references: [id])
  parent   Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children Category[] @relation("SubCategories")

  transactions Transaction[]
  budgets      Budget[]
}

model Transaction {
  id          String          @id @default(uuid())
  accountId   String
  categoryId  String?
  amount      Decimal         @db.Decimal(10, 2)
  description String?
  date        DateTime
  type        TransactionType
  isPaid      Boolean         @default(true)

  transferId String?

  recurrenceFrequency   RecurrenceFrequency?
  recurrenceIntervalDays Int?

  tags Json?

  purchaseDate DateTime?
  invoiceMonth String?

  recurrenceId      String?
  installmentNumber Int?
  totalInstallments Int?

  account  Account   @relation(fields: [accountId], references: [id], onDelete: Cascade)
  category Category? @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([accountId])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     Bytes    @unique @db.Binary(32)
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([expiresAt])
}

model SignupAllowlist {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

enum WaitlistStatus {
  PENDING
  APPROVED
  REJECTED
}

model Waitlist {
  id        String         @id @default(uuid())
  email     String         @unique
  name      String
  phone     String
  status    WaitlistStatus @default(PENDING)
  createdAt DateTime       @default(now())
}

model DailySnapshot {
  id        String   @id @default(uuid())
  accountId String
  date      DateTime
  balance   Decimal  @db.Decimal(10, 2)
  calcVersion Int    @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, date])
  @@index([date])
}

model Invite {
  id        String   @id @default(uuid())
  token     String   @unique
  email     String
  senderId  String
  sender    User     @relation("SentInvites", fields: [senderId], references: [id])
  status    InviteStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  InviteAccount[]

  @@index([email])
  @@index([token])
}

model AuditLog {
  id           String   @id @default(uuid())
  userId       String
  action       String
  resourceType String
  resourceId   String
  details      Json?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([resourceId])
}

model InviteAccount {
  id        String @id @default(uuid())
  inviteId  String
  accountId String
  permission ResourcePermission @default(VIEWER)

  invite  Invite  @relation(fields: [inviteId], references: [id], onDelete: Cascade)
  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([inviteId, accountId])
}

model Budget {
  id          String     @id @default(uuid())
  name        String
  description String?
  type        BudgetType @default(SPENDING_LIMIT)
  targetValue Decimal    @db.Decimal(10, 2)
  startDate   DateTime
  endDate     DateTime?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categories Category[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
