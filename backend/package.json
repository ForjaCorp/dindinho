{
  "name": "dindinho-backend",
  "version": "1.0.0",
  "description": "API do Dindinho",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run prisma:generate && tsc",
    "lint": "npm run prisma:generate && tsc --noEmit",
    "typecheck": "npm run prisma:generate && tsc --noEmit",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude src/**/*.routes.spec.ts --exclude src/**/integration.spec.ts --exclude src/server.spec.ts",
    "test:integration": "vitest run src/**/*.routes.spec.ts src/**/integration.spec.ts src/server.spec.ts",
    "test:watch": "vitest",
    "cleanup:refresh-tokens": "tsx ./scripts/cleanup-refresh-tokens.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@dindinho/shared": "*",
    "@fastify/cors": "^10.0.0",
    "@fastify/jwt": "^9.0.0",
    "@prisma/adapter-mariadb": "^7.1.0",
    "@prisma/client": "^7.0.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.0",
    "fastify": "^5.0.0",
    "fastify-type-provider-zod": "^4.0.0",
    "mariadb": "^3.4.5",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@prisma/config": "^7.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
    "prisma": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.15",
    "vitest-mock-extended": "^3.1.0"
  },
  "overrides": {
    "hono": "4.11.4"
  }
}
