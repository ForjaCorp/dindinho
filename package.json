{
  "name": "dindinho-monorepo",
  "version": "1.0.0",
  "description": "Monorepo do projeto Dindinho - PWA Financeiro",
  "private": true,
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "backend",
    "frontend",
    "packages/*"
  ],
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "test:unit": "turbo run test:unit",
    "test:integration": "turbo run test:integration",
    "quality:precommit": "lint-staged",
    "quality:prepush": "turbo run typecheck build test:integration --continue",
    "quality:ci": "turbo run lint typecheck build test test:integration --continue",
    "install:all": "npm install",
    "setup:dev": "npm run db:up && npm run prisma:generate && npm run prisma:migrate && npm run seed",
    "setup:prod": "npm run prisma:generate && npm run prisma:deploy && npm run seed:prod",
    "prepare": "husky"
  },
  "keywords": [
    "angular",
    "node",
    "prisma",
    "finance"
  ],
  "author": "Forja Corp",
  "license": "ISC",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.6"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,mjs,cjs,json,css,scss,html,md}": [
      "prettier --write"
    ],
    "packages/shared/**/*.{ts,tsx}": [
      "bash -c 'cd packages/shared && npm run typecheck'"
    ],
    "backend/**/*.{ts,tsx}": [
      "bash -c 'cd backend && npm run typecheck'",
      "bash -c 'cd backend && npm run test:unit'"
    ],
    "frontend/**/*.{ts,html}": [
      "npm --prefix frontend run lint:staged --"
    ]
  },
  "dependencies": {
    "primeicons": "^7.0.0"
  },
  "overrides": {
    "@angular/build@21.1.0": {
      "undici": "7.18.2"
    },
    "@prisma/dev@0.17.0": {
      "hono": "4.11.4"
    },
    "hono": "4.11.4",
    "undici": "7.18.2"
  }
}
